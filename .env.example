# 应用配置
APP_NAME=InsurGuide
APP_VERSION=1.0.0
DEBUG=True

# JWT 配置
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MySQL 数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=insurguide

# Elasticsearch 配置
ES_HOST=localhost
ES_PORT=9200
ES_USER=
ES_PASSWORD=
ES_USE_SSL=False

# 向量数据库配置
VECTOR_DB_PATH=./vector_db
VECTOR_DB_COLLECTION=insurguide_collection

# Gradio 配置
GRADIO_PORT=7860
GRADIO_SHARE=False

# OpenAI API Key (用于 LangChain)
OPENAI_API_KEY=your-openai-api-key-here
